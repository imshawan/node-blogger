{
  "name": "node-blogger",
  "version": "1.1.0",
  "author": "Shawan Mandal",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/imshawan/Node-Blogger/"
  },
  "scripts": {
    "setup": "ts-node --files -r tsconfig-paths/register ./setup",
    "build": "npx ts-node --files -r tsconfig-paths/register ./build",
    "clean": "npx ts-node ./build/clean.ts clean --p dist",
    "lint": "npx eslint --ext .ts src/",
    "lint:tests": "npx eslint --ext .ts spec/",
    "start": "node -r module-alias/register ./dist --env=production",
    "dev": "nodemon",
    "test": "nodemon --config ./spec/nodemon.json",
    "test:no-reloading": "npx ts-node --files -r tsconfig-paths/register ./spec",
    "format": "npx prettier --write .",
    "debug": "node --trace-warnings --inspect=9229 -r tsconfig-paths/register ./node_modules/ts-node/dist/bin.js ./src",
    "generate-changelog": "npx ts-node ./scripts/changelog.ts",
    "prepare": "husky install"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "/public"
    ],
    "exec": "./node_modules/.bin/ts-node --files -r tsconfig-paths/register ./src --env=development",
    "delay": 1000
  },
  "husky": {
    "hooks": {
      "commit-msg": ".husky/commit-msg"
    }
  },
  "_moduleAliases": {
    "@src": "dist"
  },
  "engines": {
    "node": ">=16.x",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bcrypt": "^5.1.0",
    "canvas": "^2.11.2",
    "chai": "^4.3.8",
    "chai-http": "^4.4.0",
    "chalk": "4.1",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "express-flash": "^0.0.2",
    "express-rate-limit": "^7.3.1",
    "express-session": "^1.17.3",
    "express-useragent": "^1.0.15",
    "glob": "^10.3.3",
    "handlebars": "^4.7.8",
    "helmet": "^6.0.1",
    "http-errors": "^2.0.0",
    "i18next": "^23.11.4",
    "i18next-http-middleware": "^3.6.0",
    "i18next-node-fs-backend": "^2.1.3",
    "jet-logger": "^1.3.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "lru-cache": "^10.2.0",
    "mocha": "^10.2.0",
    "module-alias": "^2.2.2",
    "moment": "^2.29.4",
    "mongodb": "^5.8.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.3",
    "multiparty": "^4.2.3",
    "nconf": "^0.12.0",
    "nodemailer": "^6.9.9",
    "on-finished": "^2.4.1",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "qs": "^6.11.2",
    "saslprep": "^1.0.3",
    "sharp": "^0.33.2",
    "sitemap": "^7.1.1",
    "ts-command-line-args": "^2.4.2",
    "uglify-js": "^3.17.4",
    "winston": "^3.12.0",
    "yargs": "^17.7.2",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.3.16",
    "@types/chai-http": "^4.2.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/csurf": "^1.11.2",
    "@types/dotenv": "^8.2.0",
    "@types/ejs": "^3.1.2",
    "@types/express": "^4.17.17",
    "@types/express-flash": "^0.0.2",
    "@types/express-session": "^1.17.7",
    "@types/express-useragent": "^1.0.2",
    "@types/fs-extra": "^11.0.1",
    "@types/http-errors": "^2.0.1",
    "@types/i18next-node-fs-backend": "^2.1.5",
    "@types/jsonfile": "^6.1.1",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/lodash": "^4.17.7",
    "@types/mocha": "^10.0.7",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/multiparty": "^0.0.33",
    "@types/nconf": "^0.10.3",
    "@types/node": "^18.15.0",
