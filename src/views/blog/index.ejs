              <div class="card-text autor-data d-flex pb-3">
                <p class="post-author text-uppercase">Posted by <%= post?.author.fullname || post?.author.username %>&nbsp;</p>
                <p class="post-data post-author text-uppercase">| <%= post.createdAt %></p>
              </div>
              <a href="/posts/<%= post.slug %>" class="card-button">Read article</a>
            </div>
          </div>
        </div>
      <% }) %>

