<main style="margin-top: -60px;">
  <section class="main-slider">
    <div class="hero-img">
      <div class="hero-bg"></div>
      <div class="container">
        <div class="hero-text">
          <div class="welcome-text">
            <span class="small-text <% if (_config.capitalizeHeroSection) { %> text-uppercase <% } %>">
              <%= _config.heroSection %>
            </span>
          </div>
          <p>
            <%= _config.description %>
          </p>
        </div>
      </div>
      <a href="<% if (_application.authenticated) { %>#contact<% } else { %>#cta-section-home<% } %>"><i
          class="fas fa-chevron-down"></i></a>
    </div>
  </section>

  <% if (!_application.authenticated) { %>
    <%- include('/blog/partials/cta_section'); -%>
      <% } %>

        <section id="contact" class="social-media">
          <div class="container">
            <h2 class="underscore">Popular and Trending blogs</h2>
          </div>
        </section>
        <section class="new-articles posts owl-main-content mt-5">
          <div class="d-flex w-100 owl-carousel owl-theme justify-content-around">

            <% popular.forEach(post=> { %>
              <div class="card col-12 col-md-6 col-lg-4 overflow-hidden mx-auto bg-dark text-white">
                <% if (post.featuredImage) { %>
                  <img src="<%= post.featuredImage %>" class="card-img" alt="...">
                  <% } %>
                    <div class="card-img-overlay p-3">
                      <div class="text-overlay">
                        <h5 class="card-title text-uppercase">
                          <%= post.title %>
                        </h5>
                        <div class="line"></div>
                        <div class="card-text autor-data d-flex pb-3">
                          <p class="post-author text-uppercase">Posted by <%= post?.author.fullname ||
                              post?.author.username %>&nbsp;</p>
                          <p class="post-data post-author text-uppercase">| <%= post.createdAt %>
                          </p>
                        </div>
                        <a href="/posts/<%= post.slug %>" class="card-button">Read article</a>
                      </div>
                    </div>
              </div>
              <% }) %>

          </div>
          <div class="owl-theme">
            <div class="owl-controls">
              <div class="custom-nav owl-nav"></div>
            </div>
          </div>
        </section>
        <section id="posts" class="recent-posts">
          <div class="container">
            <div class="row">
              <div class="col-12 col-md-8">
                <h2 class="underscore">RECENT POSTS</h2>
                <p class="sup-header">Lorem ipsum dolor sit amet consectetur adipisicing elit. Deserunt perspiciatis ex
                  ipsam
                  similique blanditiis. Culpa hic quia, repellendus corrupti </p>
                <div class="posts-wrapper posts-container">

                  <% recents.forEach(post=> { %>
                    <%- include('/blog/partials/post', {post: post}); -%>
                      <% }) %>

                        <div class="d-flex justify-content-center">
                          <a href="/posts" class="main-button">View all posts</a>
                        </div>
                </div>
              </div>

              <div class="sidebar col-md-4">

                <div class="recent-posts pt-5">
                  <% if (featured.length) { %>
                    <h4 class="mb-4 border-bottom pb-3"><%= translate('blog:posts_you_may_like') %></h4>
                    <% featured.forEach(featured => { %>
                        <%- include('/blog/partials/featured', {featured}); -%>
                    <% }) %>
                <% } %>

                  <% if (categories.length) { %>
                    <%- include('/blog/partials/categories', {categories}); -%>
                      <% } %>


                        <% if (tags.length) { %>
                          <%- include('/blog/partials/tags', {tags}); -%>
                            <% } %>

                </div>
              </div>
            </div>
          </div>
        </section>
        <section id="subscribe" class="subscribe">
          <div class="container">
            <h2>Subscribe & Donâ€™t Miss Out</h2>
            <p class="">Lorem ipsum dolor sit amet consectetur adipisicing elit. Deserunt perspiciatis ex ipsam
              similique
              blanditiis. Culpa hic quia, repellendus corrupti perspiciatis praesentium
            </p>
            <form>
              <input type="email" class="email text-uppercase" id="exampleInputEmail1" aria-describedby="emailHelp"
                placeholder="Enter your email"><button type="submit"
                class="button-subscribe text-uppercase">subscribe</button>
            </form>
          </div>
        </section>
</main>