<div class="signin-page">
    <main class="main pt-5">
        <div class="container">
            <section class="col-12 col-md-7 col-lg-5 mt-0 wrapper">
                <div class="heading">
                    <h1 class="text text-large"><%= translate('common:sign_in') %></h1>
                    <p class="text text-normal"><%= translate('common:new_user') %> <span><a href="/register" class="text text-links"><%= translate('common:create_account') %></a></span>
                    </p>
                </div>
                <div id="errors-area" class="alert alert-danger alert-dismissible fade show" role="alert" style="display: none;">
                    <span></span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <form id="signin-form" name="signin" class="form">
                    <div class="input-control">
                        <label for="usernameOrEmail" class="input-label"><%= translate('common:username_or_email') %></label>
                        <input name="username" id="usernameOrEmail" class="input-field" placeholder="<%= translate('common:username_or_email') %>">
                    </div>
                    <div class="input-control position-relative">
                        <label for="password-input" class="input-label"><%= translate('common:password') %></label>
                        <div class="d-flex position-relative">
                            <input type="password" name="password" id="password-input" class="input-field" placeholder="<%= translate('common:your_password') %>">
                            <div class="h-100 position-absolute d-flex password-show-toggle">
                                <i class="fa fa-eye align-self-center" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                    <div class="input-control d-flex justify-content-start">
                        <input type="checkbox" name="rememberme" id="rememberme" class="">
                        <label for="rememberme" class="input-label mx-2"><%= translate('common:remember_me') %></label>
                    </div>
                    <div class="input-control">
                        <a href="/password/reset" class="text"><%= translate('common:forgot_password') %></a>
                    </div>
                    <div class="input-control">
                    </div>
                    <button type="submit" class="input-submit mt-0 w-100 button-black"><%= translate('common:sign_in') %></button>
                </form>
                <div class="striped">
                    <span class="striped-line"></span>
                    <span class="striped-text">Or</span>
                    <span class="striped-line"></span>
                </div>
                <div class="method">
                    <div class="method-control">
                        <% oauth.forEach(service => { %>
                            <a href="<%= service.url %>" class="w-100 method-action input-submit button-outlined btn text-black">
                                <img class="me-2" height="22px" src="<%= service.icon %>"></i>
                                <span><%= service.label %></span>
                            </a>
                        <% }) %>
                    </div>
                    <!-- <div class="method-control">
                        <a href="#" class="method-action">
                            <i class="ion ion-logo-facebook"></i>
                            <span>Sign in with Facebook</span>
                        </a>
                    </div>
                    <div class="method-control">
                        <a href="#" class="method-action">
                            <i class="ion ion-logo-apple"></i>
                            <span>Sign in with Apple</span>
                        </a>
                    </div> -->
                </div>
            </section>
        </div>
    </main>
</div>