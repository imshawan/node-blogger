<div class="profile-page">
    <div class="row g-0">
        <div class="col-12">
            <div class="profile-header">
                
                <div class="cover">
                    <!-- <div class="gray-shade"></div> -->
                    <figure>
                        <img data-onerror="https://bootdey.com/img/Content/bg1.jpg" onerror="core.imageOnError(this)"  src="<%= profile.cover %>" class="img-fluid"
                            alt="profile cover">

                            
                    </figure>

                    <div class="position-relative">
                        <div class="cover-body d-flex justify-content-end position-absolute" style="top: -60px;">
                        
                            <% if (user && user.userid) { %>
                                <% if (profile.userid == user.userid) { %>
                                    <div class="d-none d-md-block">
                                        <a href="/users/<%= profile.username %>/edit" class="btn btn-dark btn-icon-text px-3 btn-edit-profile">
                                            <i class="fa-regular fa-pen-to-square"></i> <%= translate('user:edit') %>
                                        </a>
                                    </div>
                                    <div class="d-md-none">
                                        <a href="/users/<%= profile.username %>/edit" class="btn btn-dark btn-icon-text btn-edit-profile">
                                            <i class="fa-regular fa-pen-to-square"></i>
                                        </a>
                                    </div>
                                <% } else { %>
                                    <div class="">
                                        <button data-action="<% if (isFollowing) { %>unfollow<% } else {%>follow<% } %>" data-user-name="<%= profile.fullname || profile.username %>" data-userid="<%= profile.userid %>" class="btn mt-0 btn-dark px-3 btn-icon-text btn-edit-profile">
                                            <% if (isFollowing) { %>
                                                <%= translate('user:following') %> <i class="fa-fa fa-solid fa-check" aria-hidden="true"></i>
                                                
                                            <% } else { %> <%= translate('user:follow') %> <i class="fa-solid fa-plus"></i> <% } %>
                                            
                                        </button>
                                    </div>
                                <% } %>
                            <% } %>
                        
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="row position-relative ms-0">
            <div class="d-flex position-absolute" style="top: -39px;width: 95%;">
                <div class="d-flex">
                    <img class="profile-pic" data-onerror="" onerror="core.imageOnError(this)" src="<%= profile.picture %>"
                        alt="profile">
                    <div class="my-5 ms-2">
                        <div class="profile-name text-black"><%= profile.fullname || profile.username %></div>
                        <div class="username font-body">@<%= profile.username %></div>
                    </div>
            
                </div>
            </div>
        </div>

    </div>
    <div class="row profile-body g-0 px-md-4 px-lg-5" style="padding-top: 6rem;">

        <div class="header-links mb-2">
